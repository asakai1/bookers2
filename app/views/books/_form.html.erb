<div class="container">
  <div class="row">
    <div class="form-body">
      <h2 class="text-dark bg-white mt-3">New book</h2>

      <%= form_with model: book do |f| %>
        <div class="form-group">
          <label>Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label>Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-lg btn-success mt-4" %>
      <% end %>
    </div>
  </div>
</div>