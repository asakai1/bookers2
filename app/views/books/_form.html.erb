<div class="container">
  <div class="row col-3">
    <div class="form-body">
      <h2 class="text-dark bg-white mt-3">New book</h2>
      <% if book.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= book.errors.count %>件のエラーが発生しました
          </h6>
          <% book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: book do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class:"form-control", row:"3" %>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body, class:"form-control", row:"3" %>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-lg btn-success mt-4" %>
      <% end %>
    </div>
  </div>
</div>