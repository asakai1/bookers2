<div class="flash-notifications">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: key) %>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="flex-column col-md-3">
      <h2>User info</h2>
      <p class="mb-0"><%= image_tag @books.user.get_profile_image(100,100) %></p>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @books.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @books.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to(edit_user_path(@books.user.id), class: 'btn btn-outline-secondary col-12') do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @books.user.get_profile_image(100,100) %><br>
              <%= link_to @books.user.name, user_path(@books.user.id) %>
            </td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <% if @books.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@books.id), class: 'btn btn-success btn-sm mx-auto'%></td>
            <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger btn-sm mx-auto'%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>