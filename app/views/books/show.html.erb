<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'sidebar', user: @user %>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-8 ml-auto">
      <h2>Book Detail</h2>
      <table class="table">
        <tbody>
        <% books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>