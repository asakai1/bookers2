<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'users/sidebar', user: @user %>
      <%= render 'form', book: @book %>
    </div>
    <div class="row flex-column col-8 ml-auto">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @books.user.get_profile_image(100, 100) %><br>
              <%= link_to @books.user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <td><%= link_to "Edit", edit_book_path(@books.id), class: 'btn btn-success btn-sm mx-auto'%></td>
            <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger btn-sm mx-auto'%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>