<div class="container">
<div class="row">
<h1>編集画面</h1>
<div class="flex-column">
<%= form_with model: @user do |f| %>
<div>
  <label>Name</label>
  <%= f.text_field :name %>
</div>
<div>
  <label>ProfileImage</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
</div>
<div>
  <label>Introcuction</label>
  <%= f.text_area :body %>
</div>
  <%= f.submit 'Update User' %>
<% end %>