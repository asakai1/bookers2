<div class="container">
  <div class="row">
    <div class="form-body mx-auto">
      <h2 class="text-dark bg-white mt-3">User info</h2>
      <%= form_with model: @user,ã€€local: true do |f| %>
        <div class="form-group mx-auto">
          <label>Name</label>
          <%= f.text_field :name, class:"form-control", row:"3" %>
        </div>
        <div class="form-group">
          <label>ProfileImage</label>
          <%= attachment_image_tag @user, :profile_image %>
          <%= f.attachment_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <label>Introcuction</label>
          <%= f.attachment_text_area :body, class:"form-control", row:"3" %>
        </div>
        <%= f.submit 'Update User', class:"btn btn-lg btn-success mt-4" %>
      <% end %>
    </div>
  </div>
</div>