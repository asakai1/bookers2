<div class="container">
  <div class="row flex-column">
    <h2>User info</h2>
    <p class="mb-0"><%= image_tag user.get_profile_image(100, 100) %></p>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <% if user == current_user %>
      <%= link_to(edit_user_path(user.id), class: 'btn btn-outline-secondary col-12') do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  </div>
</div>