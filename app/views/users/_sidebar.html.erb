<div class="container">
  <div class="row">
    <div class="container">
     <div class="row col-3 flex-column">
        <h2>User info</h2>
        <p class="mb-0"><%= image_tag user.get_profile_image(100, 100) %></p>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="row col-3">
        <button type="button", class="btn btn-outline-secondary btn-block">
          <i class="fas fa-user-cog"></i>
        </button>
        <h2 class="text-dark bg-white mt-3">New book</h2>
        <div class="form-body">
          <% if book.errors.any? %>
            <ul class="alert alert-danger" role="alert">
              <h6 class="alert-heading">
                <%= book.errors.count %>件のエラーが発生しました
              </h6>
              <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form_with model: Book.new do |f| %>
            <div class="form-group">
              <label>Title</label>
              <%= f.text_field :title, class:"form-control", row:"3" %>
            </div>
            <div class="form-group">
              <label>Opinion</label>
              <%= f.text_area :body, class:"form-control", row:"3" %>
            </div>
            <%= f.submit 'Create Book', class:"btn btn-lg btn-success mt-4" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>